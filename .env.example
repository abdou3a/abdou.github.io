# Environment Configuration

# Database
DATABASE_URL=postgresql://osint_user:osint_pass@localhost:5432/osint_ai_db
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys
OPENAI_API_KEY=your-openai-api-key
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
LINKEDIN_API_KEY=your-linkedin-api-key

# Payment
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@osint-ai.com

# Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=osint-ai-storage
AWS_REGION=us-east-1

# Monitoring
SENTRY_DSN=your-sentry-dsn
ELASTIC_APM_SERVICE_NAME=osint-ai-api

# Rate Limiting
RATE_LIMIT_STARTER=100
RATE_LIMIT_PROFESSIONAL=1000
RATE_LIMIT_ENTERPRISE=-1

# Features
ENABLE_FACE_RECOGNITION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_GEOLOCATION=true
ENABLE_OCR=true

# External Services
PROXY_ENABLED=false
PROXY_URL=http://proxy:8080
USER_AGENT=OSINT-AI/1.0 (https://osint-ai.com)
